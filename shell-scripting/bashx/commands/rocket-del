print-color() {

  RED='\033[0;31m'
  GREEN='\033[0;32m'
  NC='\033[0m' # No Color

  case $1 in
  red)
    COLOR=$RED
    ;;
  green)
    COLOR=$GREEN
    ;;
  esac

  printf "${COLOR}$2${NC}"
}

read -p "Are you sure you want to destroy the rocket? [y/n]: " confirm
if [ "$confirm" = "y" ]
then
  echo "Destroying rocket - $1..."
  rm -rf $1
  sleep 1
  print-color green "Done!\n"
else
  echo "Exiting without destroying!"
fi
